{
    "name": "pedrotroller/php-cs-custom-fixer",
    "description": "PHP-CS-FIXER : my custom fixers",
    "license": "MIT",
    "require": {
        "php": ">5.3.6",
        "friendsofphp/php-cs-fixer": "^1.11"
    },
    "require-dev": {
        "phpspec/phpspec": "^2.4"
    },
    "autoload": {
        "psr-0": { "PedroTroller\\CS": "src/" }
    },
    "config": {
        "bin-dir": "bin",
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.4.x-dev"
        }
    }
}
